<?xml version="1.0" encoding="utf-8"?>
<com.projectsexception.myapplist.view.CheckedLinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    style="?attr/itemStyle"
    android:background="@drawable/list_selector_holo_dark">
    
    <ImageView
        android:id="@+id/list_item_icon" 
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/content_desc_application_icon" />
    
    <TextView 
        android:id="@+id/list_item_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"/>
    
    <ImageButton 
        android:id="@+id/list_item_details" 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        style="?attr/itemDetailsStyle"
        android:contentDescription="@string/content_desc_item_details"/>

</com.projectsexception.myapplist.view.CheckedLinearLayout>